@Time

@code {
    [Parameter] public int Time { get; set; } = 5;

    public async void StartTimerAsync()
    {
        while (Time > 0)
        {
            Time--;
            StateHasChanged();
            await Task.Delay(1000);
        }
        TimeOut();
    }

    protected override void OnInitialized()
        => StartTimerAsync();

    [Parameter]
    public Action TimeOut{ get; set; }
}