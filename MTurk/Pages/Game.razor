@page "/game/{sessionId}"

@inject ISessionService sessionService
@inject NavigationManager NavigationManager

<div class="d-flex justify-content-center">
    <h3>The Game</h3>
</div>

@if (gameTimedOut)
{
    <div class="d-flex justify-content-center">
        <div class="p-3 mb-2 bg-warning text-dark">
            You could not  agree with your partner in @MaxGameTime seconds, so you get 3 Gold Bars only.
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <button type="button" class="btn btn-primary mt-4">Next game</button>
    </div>
}
else
{
    <div class="row d-flex">
        <div class="col">
            <div class="mb-4">

                <div class="card chat-room small-chat wide" id="myForm">
                    <div class="card-header">
                        You get <mark> 3 </mark> Gold Bars, if you do not reach agreement in <Timer Time="@MaxGameTime" TimeOut="@OnTimeOut" /> seconds.

                    </div>
                    <div class="my-custom-scrollbar pre-scrollable" id="message">
                        <div class="card-body p-3">
                            <div class="">
                                <div class="card bg-light rounded w-75 z-depth-0 mb-1 message-text">
                                    <div class="card-body p-2">
                                        <p class="card-text black-text">Hello there!<br />So how do you think we can split 20 Gold Bars between two of us?.</p>
                                    </div>
                                </div>
                                <div class="card bg-primary rounded w-75 float-right z-depth-0 mb-1">
                                    <div class="card-body p-2">
                                        <p class="card-text text-white">How about 14 Gold Bars for me and 6 for you?</p>
                                    </div>
                                </div>

                                <div class="card bg-light rounded w-75 z-depth-0 mb-1 message-text">
                                    <div class="card-body p-2">
                                        <p class="card-text black-text">9 for you and 11 for me?</p>
                                    </div>
                                </div>
                                <div class="card bg-primary rounded w-75 float-right z-depth-0 mb-1">
                                    <div class="card-body p-2">
                                        <p class="card-text text-white">4 Gold Bars for me and 16 for you?</p>
                                    </div>
                                </div>

                                <div class="card bg-light rounded w-75 z-depth-0 mb-1 message-text">
                                    <div class="card-body p-2">
                                        <p class="card-text black-text">Agreed! 4 Gold Bars for you and 16 for me. Thank you 😀</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="container">

                            <div class="row justify-content-between">
                                <div class="col-8">
                                    <input type="number" id="for-me" min="0" max="20" step="1" /> Gold Bars for me (10 Gold Bars for you)
                                    <input type="range" class="custom-range" min="0" max="20" step="1" id="customRange3">
                                </div>
                                <div class="col-2">
                                    <button type="button" class="btn btn-primary">Send</button>
                                </div>
                            </div>
                            <hr />
                            <div class="row justify-content-between">
                                <div class="col-8">
                                    Or accept the offer and get 10 Gold Bars
                                </div>
                                <div class="col-2">
                                    <button type="button" class="btn btn-primary">Accept</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}


@code {

    // https://www.nexmo.com/blog/2019/12/18/create-a-simple-messaging-ui-with-bootstrap-dr
    // https://stackoverflow.com/questions/59126869/can-the-state-of-the-counter-in-the-example-blazor-project-be-preserved-between

    private bool gameTimedOut = false;
    public const int MaxGameTime = 10;
    private GameInfo game;

    [Parameter]
    public string sessionId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        game = await sessionService.GetCurrentGame(sessionId);
        if (game is null)
            NavigationManager.NavigateTo($"thankyou/{sessionId}");
    }

    public void OnTimeOut()
    {
        gameTimedOut = true;
        StateHasChanged();
    }
}
